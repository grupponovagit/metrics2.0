{
  // Disabilita PHP Intellisense (zobo) - causa crash di memoria
  "php.suggest.basic": false,
  "php.validate.enable": false,
  "phpLanguageServer.enable": false,
  
  // Configurazione Intelephense (pi√π performante)
  "intelephense.files.maxSize": 5000000,
  "intelephense.files.exclude": [
    "**/vendor/**/{tests,test,Tests,Test}/**",
    "**/vendor/**/vendor/**",
    "**/node_modules/**",
    "**/storage/**",
    "**/public/build/**",
    "**/admin-app/vendor/**/{tests,test,Tests,Test}/**",
    "**/admin-app/storage/**",
    "**/admin-app/bootstrap/cache/**"
  ],
  "intelephense.environment.includePaths": [
    "admin-app/vendor"
  ],
  
  // Ottimizzazione file watcher
  "files.watcherExclude": {
    "**/vendor/**": true,
    "**/node_modules/**": true,
    "**/storage/**": true,
    "**/public/build/**": true,
    "**/admin-app/vendor/**": true,
    "**/admin-app/storage/**": true,
    "**/admin-app/bootstrap/cache/**": true
  },
  
  // Ottimizzazione ricerca
  "search.exclude": {
    "**/vendor/**": true,
    "**/node_modules/**": true,
    "**/storage/**": true,
    "**/public/build/**": true
  }
}

